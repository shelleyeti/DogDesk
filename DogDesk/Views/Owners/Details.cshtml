@model DogDesk.Models.Owner

@{
    ViewData["Title"] = "Details";
}

<h3>Details</h3>

<div>
    <h5>Owner Information</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreetAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomePhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomePhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CellPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CellPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkPhone)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<br />

<div>
    <h5>Pets</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.GenderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.SizeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.AnimalTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.Color1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.Color2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetOwners.FirstOrDefault().Pet.Breed)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PetOwners)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.GenderOfAnimal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.SizeOfAnimal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.TypeOfAnimal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.Color1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.Color1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.Breed)
                    </td>
                    <td>
                        <a asp-controller="Pets" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Pets" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />